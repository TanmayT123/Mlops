import mlflow
import mlflow.sklearn
from sklearn.datasets import load_iris
from sklearn.model_selection import train_test_split
from sklearn.ensemble import RandomForestClassifier
from sklearn.metrics import accuracy_score

# ---------- Step 1: Set tracking URI to local MLflow server ----------
mlflow.set_tracking_uri("http://127.0.0.1:5000")  # The MLflow UI runs here

# ---------- Step 2: Create or set experiment ----------
mlflow.set_experiment("Iris_Model_Registry_Demo")

# ---------- Step 3: Load data ----------
data = load_iris()
X_train, X_test, y_train, y_test = train_test_split(data.data, data.target, test_size=0.2, random_state=42)

# ---------- Step 4: Train and log model ----------
with mlflow.start_run() as run:
    model = RandomForestClassifier(n_estimators=100, random_state=42)
    model.fit(X_train, y_train)
    
    preds = model.predict(X_test)
    acc = accuracy_score(y_test, preds)
    
    # Log metric and model
    mlflow.log_metric("accuracy", acc)
    mlflow.sklearn.log_model(model, "random_forest_model", registered_model_name="IrisClassifier")

    print(f"Model registered as: IrisClassifier (accuracy: {acc:.3f})")


    python -m mlflow ui
